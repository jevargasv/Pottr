<div class="card" style="background-color:#003152; width: 45rem; margin-left: auto; padding:10px; margin-right: auto; margin-top: 40px;">
  <div class="card-body">

  <br>
  <br>
  <h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">Edit User Profile</h4>
  <br>
  <br>
    <center><form method="post" action="/users/<%= session[:users_id]%>" autocomplete="off">
            <input type="hidden" name="_method" value="PUT"> 
              <div class="edit-info">
                <h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">First Name</h4> <input type="text" name="first_name" placeholder="First name, please." value="<%= @user.first_name %>">
                <br>
                <br>
                <br>
                <h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">Last Name</h4> <input type="text" name="last_name" placeholder="Last name, please." value="<%= @user.last_name %>">
                <br>
                <br>
                <br>
                <h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">Email</h4> <input type="email" name="email" placeholder="Email, please." value="<%= @user.email %>">
                <br>
                <br>
                <br>
                <h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">Birthday</h4> <input type="date" name="birthday" style="height:30px; width:252px;" placeholder="mm/dd/yyyy" value="<%= @user.birthday %>" autofocus>
                <br>
                <br>
                <br>
                <h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">Username</h4> <input type="text" name="username" placeholder="Username" value="<%= @user.username %>">
                <br>
                <br>
                <br>
                <h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">Password</h4> <input type="password" name="password" placeholder="Password" value="<%= @user.password %>">
                <br>
                <br>
                <input style="margin-left:0px; margin-right:auto;" type="submit" button class="btn mt-5" id="edit-button" value="Edit">
                <a href='/users/ <%=session[:user_id]%> /profile'><input style="margin-left:20px; margin-right:auto;" type="button" button class="btn mt-5" id="forget-it-button" value="Forget It"></a>
              </div>
            </form>
  <br>
  <br>
  <h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">Delete User Profile</h4>
    <form method="POST" action="/users/<%= session[:user_id] %>" autocomplete="off">
        <input type="hidden" name="_method" value="DELETE">
        <input type="button" button class="btn mt-5" id="delete-button" type="submit" value="Avada Kedavra, <%= @user.username %> !">
    </form></center>
    <br>
    <br>
  </div>
</div>

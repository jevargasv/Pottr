<link rel="stylesheet" type="text/css" href="<%= url('/assets/homepage.css') %>">
<div id="wrapper">
<nav style="background-color: #003152;" class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a style="text-decoration:none;" class="navbar-brand" href="/"><h2>P</h2></a>
    </div>
    <ul style="display: inline-block;" class="nav navbar-nav">
      <li style="display: inline; float:left;"><a style="text-decoration:none;" href="/logout"><h3>Log Out</h3></a></li>
    </ul>
  </div>
</nav>

<p id="welcome"> Welcome, <%= get_current_user.username %> </p>

<% @users_posts_sort.each do |post| %>
<div class="card" style="width:65rem; margin-left:auto; margin-right:auto; margin-top:40px;">
  <div class="card-body">
    <div class="card-post">
    <a style="text-decoration:none;" href="/users/ <%= @user.id %> "> <%= @user.username %> </a>
    <br>
    <br>
    <h5 id="title" style="font-size:40px; color:black; font-weight:bold; font-family:Helvetica;" class="card-title"> <%= post.title %> </h5>
    <img class="card-img-top" src="<%= post.image_url %>">
    <br>
    <br>
    <p class="card-content"> <%= post.content %> </p>
    <h6 class="card-time"> Made on <%= post.timestamp %> </h6>
    <br>
    <a style="text-decoration:none;" href="/posts/<%= post.id %>/edit"> Edit Post </a>
    <br>
    <br>
    <a style="text-decoration:none;" href="/users/ <%= session[:user_id] %> /profile"> View User's Profile </a>
    <br>
    <br>
    <a style="text-decoration:none;" href="/posts/new"> Create New Post </a>
    </div>
  </div>
</div>
<br>
<br>
<% end %>

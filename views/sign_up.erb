<link rel="stylesheet" type="text/css" href="<%= url('/assets/signup.css') %>">
<div class="card">
  <div class="card-body">
<form id="signup" action="/sign_up" method="post">
    First Name: <input type="text" name="first-name" id="first-name" placeholder="First name, please.">
    <br>
    Last Name: <input type="text" name="last-name" id="last-name" placeholder="Last name, please.">
    <br>
    E-mail: <input type="email" name="email" id="email" placeholder="Email, please.">
    <br>
    Birthday: <input type="date" name="birthday" id="birthday" placeholder="mm/dd/yyyy">
    <br>
    Username: <input type="text" name="username" id="username" placeholder="Username, please.">
    <br>
    Password: <input type="password" name="password" id="password" placeholder="Password, please.">
    <br>
    <input type="submit" value="SIGN UP">
</form>
  </div>
</div>
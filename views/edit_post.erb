<nav style="background-color: #003152;" class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a style="text-decoration:none;" class="navbar-brand" href="/"><h2>P</h2></a>
    </div>
    <ul style="display: inline-block;" class="nav navbar-nav">
      <li style="display: inline; float: left; margin-top: -55px; margin-left: 8px;"><a style="text-decoration:none;" href="/logout"><h3>Log Out</h3></a></li>
    </ul>
  </div>
</nav>
<nav style="background-color: gold;" class="navbar navbar-default">
  <div class="container-fluid">
    <ul style="display: inline-block; margin-top: 15px; margin-left: auto; margin-right: auto;" class="nav navbar-nav">
      <li style="display: inline-block; margin-left: 30px; margin-right: 30px;"><a style="text-decoration:none;" href="/posts/new" onmouseover="overStyle(this)" onmouseout="outStyle(this)"><h3 class="items" style="color: #003152; margin-left: auto; margin-right: auto;">New Post</h3></a></li>
      <li style="display: inline-block; margin-left: 30px; margin-right: 30px;"><a style="text-decoration:none;" href="/aparecium"><h3 class="items" style="color: #003152; margin-left: auto; margin-right: auto;">Aparecium!</h3></a></li>
      <li style="display: inline-block; margin-left: 30px; margin-right: 30px;"><a style="text-decoration:none;" href="/users/ <%= session[:user_id] %>"><h3 class="items" style="color: #003152; margin-left: auto; margin-right: auto;"><%= get_current_user.username %>'s Posts</h3></a></li>
      <li style="display: inline-block; margin-left: 30px; margin-right: 30px;"><a style="text-decoration:none;" href="/users/ <%= session[:user_id] %> /profile"><h3 class="items" style="color: #003152; margin-left: auto; margin-right: auto;"><%= get_current_user.username %>'s Profile</h3></a></li>
    </ul>
  </div>

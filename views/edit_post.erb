<div class="card" style="background-color:#003152; width: 45rem; margin-left: auto; padding:10px; margin-right: auto; margin-top: 40px;">
  <div class="card-body">

<br>
<br>
<h4 id="edit" style="font-family:"New"; color:gold; font-size:40px;">Edit Post</h4>
<br>
<br>
<form method="post" action="/posts/ <%= @post.id %> " autocomplete="off">
    <input type="hidden" name="_method" value="PUT">
    <h4 id="title" style="font-family:"New"; color:gold; font-size:40px;">Title</h4>
    <br>
    <input type="text" name="title" placeholder="<%= @post.title %>" value="<%= @post.title %>">
    <br>
    <br>
    <br>
    <h4 id="image" style="font-family:"New"; color:gold; font-size:40px;">Image</h4>
    <br>
    <input type="text" name="image" placeholder="<%= @post.image_url %>" value="<%= @post.image_url %>">
    <br>
    <br>
    <br>
    <h4 id="content" style="font-family:"New"; color:gold; font-size:40px;">Content</h4>
    <br>
    <textarea rows="5vh" cols="80vh" type="text" name="content"><%= @post.content %></textarea>
    <input style="margin-left:196px; margin-right:auto;" type="submit" button class="btn mt-5" id="publish-button" value="Publish">
    <a href="/"><input style="margin-left:20px; margin-right:auto;" type="button" button class="btn mt-5" id="forget-it-button" value="Forget It"></a>
    <br>
    <br>
    <br>
</form>

<h4 id="delete" style="font-family:"New"; color:gold; font-size:40px;">Delete Post</h4>
<form method="post" action="/posts/ <%= @post.id %> " autocomplete="off">
    <input type="hidden" name="_method" value="DELETE">
    <center><input type="button" button class="btn mt-5" id="delete-button" type="submit" value="Avada Kedavra, <%= @post.title %> "></center>
</form>
<br>
<br>

  </div>
</div>
</div>
<br>
